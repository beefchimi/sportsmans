%form#options_form.options_form.has-popout.has-quantity{:action => "", :method => "POST"}

	%h5.popout_heading Select Type

	%a#popout_close.button_close{:href => "#", :title => "Close Window"}
		%svg.svg_remove
			%use{"xlink:href" => "#remove"}

	%table{"data-container" => "width-1000"}

		%thead
			%tr
				%th.header_item Item #
				%th.header_action Action
				%th.header_length Length
				%th.header_weight Weight
				%th.header_model Model
				%th.header_power Power
				%th.header_lure-wt Lure WT
				%th.header_handle Handle
				%th.header_brand Brand
				%th.header_piece Piece
				%th.header_price Price
				%th.header_quantity Quantity

		%tbody

			-# an example of both a sale product and out-of-stock
			-# 'variation_outofstock' and 'variation_sale' classed added to <tr>
			-# if sale: td.product_price uses 2 <span>s - price_reg & price_sale
			%tr.variation_outofstock.variation_sale{:id => "row_12345-0"}
				%td.product_item 12345-0
				%td.product_action Kinda Slow
				%td.product_length 5ft 7in
				%td.product_weight 4.2oz
				%td.product_model UGH123BRB
				%td.product_power Mega
				%td.product_lure-wt 1/4 &ndash; 3/4oz
				%td.product_handle 5
				%td.product_brand St Croix
				%td.product_piece 2
				%td.product_price
					%span.price_reg $420.00
					%span.price_sale $399.99
				%td.product_quantity
					.adjust_quantity
						%input.adjust_number{:type => "number", :min => "0", :max => "999", :step => "1", :value => "0", :name => "#12345-0"}
						%button.adjust_decrease{:type => "button"}
							%svg.svg_minus
								%use{"xlink:href" => "#minus"}
						%button.adjust_increase{:type => "button"}
							%svg.svg_plus
								%use{"xlink:href" => "#plus"}

			-# row ID is suffixed with item ID
			- (1..12).each do |i|
				%tr{:id => "row_12345-#{i}"}
					%td.product_item 12345-#{i}
					%td.product_action Extra Fast
					%td.product_length 6ft 8in
					%td.product_weight 3.9oz
					%td.product_model LX568MXF
					%td.product_power Medium
					%td.product_lure-wt 3/16 &ndash; 5/8oz
					%td.product_handle 6
					%td.product_brand St Croix
					%td.product_piece 1
					%td.product_price $320.50
					%td.product_quantity
						.adjust_quantity
							%input.adjust_number{:type => "number", :min => "0", :max => "999", :step => "1", :value => "0", :name => "#12345-#{i}"}
							%button.adjust_decrease{:type => "button"}
								%svg.svg_minus
									%use{"xlink:href" => "#minus"}
							%button.adjust_increase{:type => "button"}
								%svg.svg_plus
									%use{"xlink:href" => "#plus"}
							-# example of submission error: parent div receives "error_message" class
							#delete_popup.tooltip
								%span.wrap_text
									There was an error while attempting to add the item to the order.
